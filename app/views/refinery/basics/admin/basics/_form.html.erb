<%= form_for [refinery, :basics_admin, @basic] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @basic,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :location -%>
    <%= f.text_field :location -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:content],
                :object => "basics/basic" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.basics.admin.basics.basic'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @basic.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
